# Dockerfile untuk Layanan Manajemen Pengguna (Auth Service)
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --production

# Copy application source
COPY . .

# Expose port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3001/api/auth/health', (r) => { process.exit(r.statusCode === 200 ? 0 : 1) })" || exit 1

# Start application
CMD ["node", "server.js"]
